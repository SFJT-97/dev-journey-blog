---
const { title, description, url } = Astro.props;
---

<style>
    .container {
        display: flex;
        justify-content: space-between;
        align-self: center;

        width: 70%;

        margin: 35px 0 0 0;

        border: 1px;
        border-radius: 5;
        border-style: dashed;
        border-color: #3a3e4a;
    }

    .blog__item {
        margin: 15px;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
    }

    h2 {
        font-weight: 600;
    }

    p {
        font-style: italic;
    }

    a {
        align-self: center; 
        margin: 15px;
        padding: 15px;
        text-decoration: none;
        color: green;
    }

    a:hover {
        background-color: #7c561931;
    }
</style>


<div class="container">
    <div class="blog__item">

        <div>
            <h2>
                {title}
            </h2>
        </div>

        <div>
            <p>
                {description}
            </p>
        </div>

    </div>

        <a href={url} class="button"> Go! </a>
</div>